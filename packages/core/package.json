{
  "name": "@chunkflowjs/core",
  "version": "0.0.1-alpha.6",
  "description": "Core upload engine for ChunkFlow Upload SDK",
  "keywords": [
    "chunked-upload",
    "core",
    "typescript",
    "upload"
  ],
  "license": "MIT",
  "author": "",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsdown src/index.ts --format esm && tsc --emitDeclarationOnly --declaration --outDir dist",
    "dev": "tsdown src/index.ts --format esm --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@chunkflowjs/protocol": "workspace:*",
    "@chunkflowjs/shared": "workspace:*"
  },
  "devDependencies": {
    "fast-check": "^4.5.3",
    "tsdown": "^0.20.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
