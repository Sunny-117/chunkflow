{
  "name": "@chunkflow/core",
  "version": "0.0.0",
  "description": "Core upload engine for ChunkFlow Upload SDK",
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown src/index.ts --format esm && tsc --emitDeclarationOnly --declaration --outDir dist",
    "dev": "tsdown src/index.ts --format esm --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "upload",
    "core",
    "chunked-upload",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@chunkflow/protocol": "workspace:*",
    "@chunkflow/shared": "workspace:*"
  },
  "devDependencies": {
    "fast-check": "^4.5.3",
    "tsdown": "^0.20.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
